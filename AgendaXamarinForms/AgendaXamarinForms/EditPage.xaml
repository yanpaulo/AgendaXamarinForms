<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AgendaXamarinForms.EditPage"
             Title="Contato"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Informações de Contato: " FontAttributes="Bold"></Label>
            
            <Label Text="Nome"></Label>
            <Entry Text="{Binding Nome}"></Entry>

            <Label Text="Telefone"></Label>
            <Entry Text="{Binding Telefone}"></Entry>

            <Button Text="Salvar" VerticalOptions="End" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>